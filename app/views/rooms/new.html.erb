<%= render "shared/flash_message" %>
<div class="min-h-screen flex items-center justify-center bg-gradient-to-b from-slate-900 via-rose-950/70 to-slate-950">
  <div class="flex flex-col items-center justify-center space-y-10">
    
    <!-- タイトル -->
    <div class="text-center space-y-3">
      <h2 class="text-3xl sm:text-4xl font-bold leading-snug">誰と一緒に作りますか？</h2>
      <p class="text-gray-500">(フォローしている人のみ)</p>
    </div>

    <!-- メインカード -->
    <div class="w-full max-w-2xl bg-white rounded-xl border shadow-md px-8 py-10"
         data-controller="radio-select">

      <!-- 検索フォーム -->
      <div class="w-full max-w-md mx-auto mb-10">
        <%= search_form_for @q, url: new_room_path, method: :get, html: { class: "relative" } do |f| %>
          <i class="fa-solid fa-magnifying-glass absolute left-4 top-1/2 -translate-y-1/2 text-gray-500 text-lg"></i>
          <%= f.search_field :name_cont,
                class: "w-full rounded-xl border border-gray-300 bg-white px-12 py-3 text-lg text-gray-900 shadow-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-rose-300",
                placeholder: "ユーザーを探す" %>
          <%= f.submit "検索", class: "sr-only" %>
        <% end %>
      </div>

      <!-- 検索結果一覧 -->
      <%= form_with model: @room, class: "" do |f| %>
      <div class="w-full max-w-md mx-auto px-4 py-4 space-y-5">
        <% @users.each do |user| %>
          <% next if user == current_user %> <!-- 自分は表示しない -->

          <!-- 行全体クリックで選択できる。フォローボタンは除外 -->
          <div class="flex items-center justify-between cursor-pointer select-none"
               data-action="click->radio-select#rowClick"
               data-radio-select-name-value="<%= user.name %>">

            <!-- 左：ラジオ + 丸アイコン + 名前 -->
            <label class="flex items-center gap-3">
              <%= f.radio_button :user_name, user.name,
                    class: "w-4 h-4 text-blue-600 border-gray-300 focus:ring-blue-500",
                    data: { radio_select_target: "radio", action: "change->radio-select#pick" } %>
              <div class="flex items-center gap-3">
                <div class="w-4 h-4 rounded-full bg-gray-300"></div>
                <p class="text-base sm:text-lg text-gray-900"><%= user.name %></p>
              </div>
            </label>

            <!-- 右：フォローボタン（このクリックは選択に反応しない） -->
            <div data-radio-select-ignore>
              <% if current_user.following_users.include?(user) %>
                <%= link_to "フォローを外す",
                            user_follows_path(user.id),
                            data: { turbo_method: :delete },
                            class: "px-4 py-1 border border-gray-400 bg-gray-200 text-sm text-gray-800 rounded-md hover:bg-gray-300 transition" %>
              <% else %>
                <%= link_to "フォローする",
                            user_follows_path(user.id),
                            data: { turbo_method: :post },
                            class: "px-4 py-1 border border-blue-800 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700 transition" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- 選択中ユーザー名とボタン -->
      <div class="text-center mt-60">
        <input id="selected_user_name"
               type="text"
               readonly
               placeholder="ユーザーを選択してください"
               data-radio-select-target="field"
               class="w-64 border border-gray-300 rounded-xl py-2 px-4 text-center text-gray-800 font-medium mb-6 focus:outline-none">
        <br>
        <%= f.submit "部屋を作る",
              data: { radio_select_ignore: true },
              class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-2.5 px-8 rounded-xl transition" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

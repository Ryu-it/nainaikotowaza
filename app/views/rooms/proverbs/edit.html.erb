<%= render "shared/flash_message" %>
<div class="bg-gradient-to-b from-slate-900 via-rose-950/70 to-slate-950 min-h-screen py-16 px-4">
  <div class="max-w-6xl mx-auto space-y-20">
    <div class="text-center text-white space-y-4">
      <h1 class="text-4xl md:text-5xl font-bold">ふたりで仕上げることわざルーム</h1>
    </div>

    <div class="relative"
         data-controller="typing"
         data-typing-room-id-value="<%= @room.id %>">
      <% my_ru = @room.room_users.find_by(user_id: current_user.id) %>
      <%= form_with model: [@room, @proverb], class: "space-y-8" do |f| %>
        <% if my_ru&.word_giver? %>
          <%= render "form_word_giver", f: f %>
        <% elsif my_ru&.proverb_maker? %>
          <%= render "form_proverb_maker", f: f %>
        <% else %>
          <p class="text-center text-gray-200">この部屋での権限がありません。</p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

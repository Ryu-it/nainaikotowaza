<div class="flex items-center justify-center min-h-screen bg-gradient-to-b from-slate-900 via-rose-950/70 to-slate-950">
  <div class="w-full px-4 sm:px-6">
    <div class="mx-auto w-full max-w-xl rounded-2xl border-0 sm:border bg-transparent sm:bg-pink-50 py-12 px-6 sm:px-10">
      <div class="space-y-8">
        <h2 class="text-4xl font-bold text-center">パスワードを変更する</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field flex flex-col space-y-2">
            <%= f.label :password, "新しいパスワード" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "bg-white border rounded-xl py-4 px-6" %>
          </div>

          <div class="field flex flex-col space-y-2">
            <%= f.label :password_confirmation, "パスワードの確認" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-white border rounded-xl py-4 px-6" %>
          </div>

          <div class="actions">
            <%= f.submit "パスワードを変更する", class: "w-full text-white rounded-xl px-6 py-4 bg-blue-500 hover:bg-blue-600 transition" %>
          </div>
        <% end %>

        <div class="text-center">
          <%#= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

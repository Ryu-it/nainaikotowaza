<%# ヘルパークラスからメソッドを呼んでいる %>
<% rv = reaction_view(reactable, current_user, :like) %>

<%= button_to polymorphic_path([reactable, (rv.active ? rv.existing : :reactions)]),
              params: { kind: :like },
              method: (rv.active ? :delete : :post),
              class: "inline-flex items-center gap-1 cursor-pointer" do %>

  <i class="fa-solid fa-heart text-xl transition-transform duration-200
             <%= rv.active ? 'text-rose-500 scale-110' : 'text-gray-500 scale-100' %>"></i>

  <span class="ml-1 text-xl opacity-80"><%= rv.count %></span>
<% end %>


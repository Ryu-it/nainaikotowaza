<% count  = reactable.reactions.where(kind: :like).count %>
<% active = user_signed_in? && reactable.reactions.exists?(kind: :like, user_id: current_user.id) %>

<%= button_to polymorphic_path([reactable, :reactions]),
              params: { kind: :like },
              method: :post,
              class: [
                "inline-flex items-center gap-1 rounded-full border px-3 py-1 text-sm transition",
                active ? "bg-rose-600 text-white border-rose-700" : "bg-white text-rose-700 border-rose-200 hover:bg-rose-50"
              ].join(" ") do %>
  👍 <span>いいね</span>
  <span class="ml-1 text-xs opacity-80"><%= count %></span>
<% end %>

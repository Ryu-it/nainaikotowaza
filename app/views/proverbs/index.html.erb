<%= render "shared/flash_message" %>
<div class="bg-gradient-to-b from-slate-900 via-rose-950/70 to-slate-950 min-h-screen py-12 px-8">
  <%= search_form_for @q, url: proverbs_path, method: :get do |f| %>
    <div class="mb-20 max-w-3xl mx-auto">
      <div class="flex flex-col gap-4">
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
          <%= f.search_field :title_or_meaning_or_users_name_cont,
                             placeholder: "タイトル・意味・ユーザー名で検索",
                             class: "flex-1 border border-white/30 bg-white/80 text-gray-900 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-rose-500 transition" %>
          <%= f.submit "検索", class: "whitespace-nowrap bg-blue-600 hover:bg-blue-500 text-white font-medium rounded-xl px-6 py-3 transition" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
    <% @proverbs.each do |proverb| %>
    <%# タイトルが空なら表示させない %>
    <% next if proverb.title.blank? %>
      <div class="space-y-3">
        <%# 投稿をクリックしたときに詳細のurlに飛ぶように %>
        <div
          data-controller="redirect"
          data-redirect-url-value="<%= proverb_path(proverb) %>"
          data-action="click->redirect#navigate"
          role="button"
          class="cursor-pointer"
          data-turbo="false">
          <div class="bg-white rounded-xl shadow-md p-8 flex flex-col items-center justify-between">
            <!-- ユーザー情報 -->
            <% primary_contributor = proverb.proverb_contributors.first %>
            <% secondary_contributor = proverb.proverb_contributors.second %>
            <div class="flex items-center justify-center space-x-4 text-gray-900 mb-3 w-full">
              <% if primary_contributor&.user.present? %>
                <% user = primary_contributor.user %>
                <div class="flex items-center space-x-2">
                  <%= link_to user_path(user), class: "flex items-center space-x-2 hover:opacity-80 transition" do %>
                    <% if user.avatar.attached? %>
                      <%= image_tag user.avatar.variant(resize_to_fill: [40, 40]),
                                    class: "h-10 w-10 rounded-full object-cover border border-rose-100 shadow-sm" %>
                    <% else %>
                      <div class="h-10 w-10 rounded-full bg-rose-100 text-rose-600 flex items-center justify-center text-xs font-semibold border border-rose-200 shadow-sm">
                        <%= (user.name.presence || "?").first.upcase %>
                      </div>
                    <% end %>
                    <span class="font-medium"><%= user.name %></span>
                  <% end %>
                </div>
              <% end %>

              <% if secondary_contributor&.user.present? %>
                <span class="text-gray-500 text-base">×</span>
                <% user = secondary_contributor.user %>
                <div class="flex items-center space-x-2">
                  <%= link_to user_path(user), class: "flex items-center space-x-2 hover:opacity-80 transition" do %>
                    <% if user.avatar.attached? %>
                      <%= image_tag user.avatar.variant(resize_to_fill: [40, 40]),
                                    class: "h-10 w-10 rounded-full object-cover border border-rose-100 shadow-sm" %>
                    <% else %>
                      <div class="h-10 w-10 rounded-full bg-rose-100 text-rose-600 flex items-center justify-center text-xs font-semibold border border-rose-200 shadow-sm">
                        <%= (user.name.presence || "?").first.upcase %>
                      </div>
                    <% end %>
                    <span class="font-medium"><%= user.name %></span>
                  <% end %>
                </div>
              <% end %>
            </div>
            <!-- ことわざタイトル -->
            <div class="border rounded-xl px-4 py-3 text-center w-full">
  <p class="font-semibold text-gray-900 line-clamp-2 break-words">
    <%= proverb.title %>
  </p>
</div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-8 flex justify-center">
    <%= paginate @proverbs, window: 2 %>
  </div>
</div>
